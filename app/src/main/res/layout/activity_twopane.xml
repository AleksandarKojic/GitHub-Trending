<?xml version="1.0" encoding="utf-8"?>

<!-- This layout is used on tablets, for implementing Master/Detail flow.  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle">


    <!-- On tablets, this Fragment will hold list of trending Github repositories -->
    <FrameLayout
        android:id="@+id/repository_list_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- On tablets, this Fragment will hold details about selected Github repository -->
    <FrameLayout
        android:id="@+id/detail_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
